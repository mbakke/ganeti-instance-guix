log_error() {
    echo "$@" >&2
}

BASE64=@BASE64@
BLOCKDEV=@BLOCKDEV@
GIT=@GIT@
GIT_CLONE_ARGUMENTS="@GIT_CLONE_ARGUMENTS@"
GUIX=@GUIX@
GUIX_REPOSITORY_URI=@GUIX_REPOSITORY_URI@
QEMU_IMG=@QEMU_IMG@

if [ $DISK_COUNT -gt 0 -a -n "$DISK_0_PATH" ]; then
    TARGET_DEVICE=$DISK_0_PATH
else
    log_error "At least one disk is needed."
    exit 1
fi
