log_error() {
    echo "$@" >&2
}

BLOCKDEV=@BLOCKDEV@
GUIX=@GUIX@
QEMU_IMG=@QEMU_IMG@

DEFAULT_CONFIG=@DEFAULT_CONFIG@
CACHE_DIR="@localstatedir@/cache/ganeti-instance-guix"
GCROOTSDIR=@GCROOTSDIR@

