CLEANUP=( )

log() {
    echo "$@" >&2
}

cleanup() {
  if [[ ${#CLEANUP[*]} -gt 0 ]]; then
    LAST_ELEMENT=$((${#CLEANUP[*]}-1))
    REVERSE_INDEXES=$(seq ${LAST_ELEMENT} -1 0)
    for i in $REVERSE_INDEXES; do
      ${CLEANUP[$i]}
    done
  fi
}

trap cleanup EXIT

GUIX=@GUIX@

# external programs
CRYPTSETUP=@CRYPTSETUP@
MOUNT=@MOUNT@
UMOUNT=@UMOUNT@
FALLOCATE=@FALLOCATE@
MKSWAP=@MKSWAP@
CHATTR=@CHATTR@
JQ=@JQ@
PARTED=@PARTED@
BTRFS=@BTRFS@
SFDISK=@SFDISK@
KPARTX=@KPARTX@
PVCREATE=@PVCREATE@
VGCREATE=@VGCREATE@
VGCHANGE=@VGCHANGE@
VGREMOVE=@VGREMOVE@
LVCREATE=@LVCREATE@
LOSETUP=@LOSETUP@
MKE2FS=@MKE2FS@
MKFS_BTRFS=@MKFS_BTRFS@
MKFS_F2FS=@MKFS_F2FS@
MKFS_XFS=@MKFS_XFS@
LSBLK=@LSBLK@
BLKID=@BLKID@

CACHE_DIR="${CACHE_DIR:-@localstatedir@/cache/ganeti-instance-guix}"
GCROOTSDIR="${GCROOTSDIR:-@GCROOTSDIR@}"
VARIANTS_DIR=@VARIANTSDIR@
EXAMPLEDIR=@EXAMPLEDIR@

format_device() (
    local device="$1"
    local filesystem="$2"

    case $filesystem in
        btrfs)
            "${MKFS_BTRFS}" -f "$device"
            ;;
        ext[234])
            "${MKE2FS}" -t "$filesystem" -F "$device"
            ;;
        f2fs)
            "${MKFS_F2FS}" -f "$device"
            ;;
        xfs)
            "${MKFS_XFS}" -f "$device"
            ;;
        *)
            log "Unsupported file system: $filesystem"
            return 1
            ;;
        esac
)

partition_device() (
    local device="$1"
    local size="$2"

    "${PARTED}" \
        --script "$device" \
        mklabel gpt \
        mkpart primary 1MiB 3MiB \
        mkpart primary 3MiB "${size:-100%}" \
        set 1 bios_grub on
)

losetup_device() (
    local device="$1"
    "${LOSETUP}" --show -f "$device"
)

find_uuid() (
    local device="$1"
    "$BLKID" -o value -s UUID "$device"
)

luks_format() (
    local device="$1"
    local passphrase="$2"
    printf '%s' "$passphrase" | \
        "${CRYPTSETUP}" luksFormat --type=luks1 --key-file - "${device}"
)

luks_open() (
    local device="$1"
    local target="$2"
    local passphrase="$3"
    printf '%s' "$passphrase" | \
        "${CRYPTSETUP}" open --key-file - "${device}" "${target}"
)

luks_close() (
    local target="$1"
    "${CRYPTSETUP}" close "${target}"
)
